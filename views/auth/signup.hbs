    <h1 class="title">Signup</h1>
    <label for="username">name</label>
    <input class="input" name="username" type="text" value="Franck" required>
    <label for="lastname">lastname</label>
    <input class="input" name="lastname" type="text" value="Mama">
    <label for="email">email</label>
    <input class="input" name="email" type="text" value="test@yopmail.com">
    <label for="password">password</label>
    <input class="input" name="password" type="password" value="123">
    <div class="row">
        <label for="avatar">avatar</label>
