<form method="post" action="" class="trip_form">
    <h1 class="title">My new trip</h1>

    <label for="title">Title</label>
    <input type="text" name="title" class="input" value="Bora-Bora">

    <form action="/tripStep-add" method="post" class="add-tripStep-form">
    <p id="add-tripStep-message" class="msg"></p>
    <div class="form-item-wrapper flexed-item">
      <label for="tripStep">Add trip places</label>
      <input id="tripStep" name="tripStep" type="text" class="input" required>
    </div>
    <button>Create</button>
    </form>

    <div>
        
    </div>

    <label for="dateAndHour">Date</label>
    <input type="date" name="dateAndHour" class="input">

     <label for="description">Description</label>
    <textarea name="description" id="description" cols="30" rows="10"></textarea>

    <label for="ranking">My ranking</label>
    <select name="ranking" id="ranking" class="input">
        <option value="plane">0</option>
        <option value="bus">1</option>
        <option value="car">3</option>
        <option value="train">4</option>
        <option value="walk">5</option>

    <button class="button">Create</button>
    
</form>